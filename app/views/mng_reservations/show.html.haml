%h2 管理予約確認

.card.mb-3
  .card-header ユーザ名
  .card-body= @mng_reservation.user_name
.row.mb-3
  .col-6.p-1
    .card
      .card-header アイテム名
      .card-body= @mng_reservation.item.item_name
  .col-6.p-1
    .card
      .card-header 数量
      .card-body= @mng_reservation.number
.card.mb-3
  .card-header 管理予約名
  .card-body= @mng_reservation.reservation_name
.card.mb-3
  .card-header 予約日
  .card-body= @mng_reservation.reservation_date.strftime("%Y/%m/%d")
.row.mb-3
  .col-6.p-1
    .card
      .card-header 開始日
      .card-body= @mng_reservation.start_date.strftime("%Y/%m/%d")
  .col-6.p-1
    .card
      .card-header 終了日
      .card-body= @mng_reservation.end_date.strftime("%Y/%m/%d")
.card.mb-3
  .card-header WEB予約ID
  .card-body= @mng_reservation.web_reservation_id

= link_to '戻る', mng_reservations_path, class: 'btn btn-outline-secondary'
= link_to '編集', edit_mng_reservation_path(@mng_reservation), class: 'btn btn-outline-info'
= link_to '削除', mng_reservation_path(@mng_reservation), class: 'btn btn-danger', method: :delete, data: { confirm: '削除してよろしいですか？' }
