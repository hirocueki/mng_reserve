%h2 アイテム一覧

%table.table
  %thead.thead-dark
    %tr
      %th{ scope: 'col' } ID
      %th{ scope: 'col' } アイテム名
      %th{ scope: 'col' } ストック数
      %th{ scope: 'col' } 説明
      %th{ scope: 'col' } 表示順
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        %td= item.item_name
        %td= item.stock
        %td= item.description
        %td= item.dspo
        %td= link_to '表示', item, class: 'btn btn-outline-dark btn-sm'
        %td= link_to '編集', edit_item_path(item), class: 'btn btn-outline-info btn-sm'
        %td= link_to '削除', item, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: '削除してよろしいですか？' }
= paginate @items

= link_to '新しいアイテム', new_item_path, class: 'btn btn-primary'
